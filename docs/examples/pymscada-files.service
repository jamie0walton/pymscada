[Unit]
    Description=pymscada - files
    BindsTo=pymscada-bus.service
    After=pymscada-bus.service

[Service]
    WorkingDirectory=/home/mscada
    ExecStart=/home/mscada/pymscada/.venv/bin/pymscada run files --config ./pymscada/docs/examples/files.yaml --verbose
    Restart=always
    RestartSec=5
    User=mscada
    Group=mscada

[Install]
    WantedBy=multi-user.target